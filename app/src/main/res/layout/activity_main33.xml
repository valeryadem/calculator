<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.gridlayout.widget.GridLayout
        style="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginLeft="32dp"
            android:paddingLeft="30dp"
            android:text="ЗАТРАТЫ"
            android:textColor="@color/black"
            android:textSize="50px"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/spending"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:text="НА ЧТО ТРАЧУ"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:paddingLeft="16dp"
            android:text="СКОЛЬКО СТОИТ"
            android:textColor="@color/black"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="1" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingRight="30dp"
            android:text="СКОЛЬКО РАЗ В НЕДЕЛЮ"
            android:textColor="@color/black"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tansport_0"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:ems="10"
            android:paddingLeft="12dp"
            android:text="транспорт"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/tansport_1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="2" />

        <EditText
            android:id="@+id/tansport_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="2"

            app:layout_row="2" />

        <TextView
            android:id="@+id/medicines_0"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:ems="10"
            android:paddingLeft="12dp"
            android:text="лекарства"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="3" />

        <EditText
            android:id="@+id/medicines_1"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="3" />

        <EditText
            android:id="@+id/medicines_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="2"

            app:layout_row="3" />

        <TextView
            android:id="@+id/fastfood_0"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:ems="0"
            android:paddingLeft="12dp"
            android:text="фастфуд"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="4" />


        <EditText
            android:id="@+id/fastfood_1"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="4" />

        <EditText
            android:id="@+id/fastfood_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="2"

            app:layout_row="4" />

        <TextView
            android:id="@+id/cigarettes_0"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:ems="10"
            android:paddingLeft="12dp"
            android:text="сигареты"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="5" />

        <EditText
            android:id="@+id/cigarettes_1"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="5" />

        <EditText
            android:id="@+id/cigarettes_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="2"
            app:layout_row="5" />

        <TextView
            android:id="@+id/coffee_0"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:ems="10"
            android:paddingLeft="12dp"
            android:text="кофе"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="6" />

        <EditText
            android:id="@+id/coffee_1"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="6" />


        <EditText
            android:id="@+id/coffee_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="2"
            app:layout_row="6" />


        <TextView
            android:id="@+id/businesslunch_0"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:text="бизнес-ланч"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="7" />

        <EditText
            android:id="@+id/businesslunch_1"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="7" />

        <EditText
            android:id="@+id/businesslunch_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="2"
            app:layout_row="7" />

        <TextView
            android:id="@+id/secretspending_0"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:text="секретная трата"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_row="8" />

        <EditText
            android:id="@+id/secretspending_1"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="8" />

        <EditText
            android:id="@+id/secretspending_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_column="2"
            app:layout_row="8" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:background="#4D5138"
            android:onClick="calculate"
            android:text="рассчитать"
            app:backgroundTint="#4E513F"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="9" />

    </androidx.gridlayout.widget.GridLayout>
</ScrollView>